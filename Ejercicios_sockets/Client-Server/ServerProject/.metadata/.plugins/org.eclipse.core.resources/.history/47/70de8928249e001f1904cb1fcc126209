package Server;

import java.io.*;
import java.net.*;
import java.util.*;
import Model.Book;

public class Server {
    private static List<Book> books = new ArrayList<>();
    
    Server(){
    	 initializeBooks();
    }

    public void startServer() {
        try {
            ServerSocket serverSocket = new ServerSocket(8080);
            System.out.println("Server listening in port 8080...");

  
            while (true) {
                // Aceptar una conexi칩n de cliente
                Socket clientSocket = serverSocket.accept();
                System.out.println("Cliente conectado.");

                // Crear un nuevo hilo para manejar esta conexi칩n
                Thread clientThread = new Thread(new ClientHandler(clientSocket, books));
                clientThread.start();
            }

        } catch (IOException e) {
            e.printStackTrace();
        }
    }

    private void initializeBooks() {
        books.add(new Book("978-0747532743", "Harry Potter y la piedra filosofal", "J.K. Rowling", 15.99));
        books.add(new Book("978-0747538486", "Harry Potter y la c치mara secreta", "J.K. Rowling", 16.99));
        books.add(new Book("978-8401352836", "Juego de Tronos", "George R.R. Martin", 22.00));
        books.add(new Book("978-8401337208", "El nombre del viento", "Patrick Rothfuss", 20.00));
        books.add(new Book("978-0307474278", "El c칩digo Da Vinci", "Dan Brown", 18.00));
    }

}
